  <style>
    .card-img-top {
      width: 100%;
      height: 200px; /* Define uma altura fixa para as imagens */
      object-fit: cover; /* Faz com que a imagem cubra o espaço disponível sem distorção */
    }
    .card-body {
      padding: 0.5rem;
    }
    .card-text {
      font-size: 0.875rem;
      margin-bottom: 0;
    }
  </style>
<body>
  <div class="container mt-4">
    <h1 class="mb-4">Arquivos</h1>
    <div class="row g-2">
      <% if @posts_with_images.present? %>
        <% @posts_with_images.each do |post| %>
          <% first_image = post.images.first %>
          <% if first_image %>
            <div class="col-6 col-md-4 col-lg-3">
              <div class="card border-0">
                <%= link_to post_path(post) do %>
                  <%= image_tag first_image, class: 'card-img-top', alt: 'Imagem do post' %>
                <% end %>
                <div class="card-body p-2">
                  <p class="card-text">Post do <%= post.created_at.strftime("%d %b %Y") %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <p>Nenhum post encontrado com imagens.</p>
      <% end %>
    </div>
  </div>

</body>
